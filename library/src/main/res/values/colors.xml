<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="transparent">@android:color/transparent</color>

    <!-- 三级菜单的背景色(每一级的选中背景色用下一级的背景色) -->
    <color name="mlp_bg_level_1">#FFFFFF</color>
    <color name="mlp_bg_level_2">#F5F5F5</color>
    <color name="mlp_bg_level_3">#EDEDED</color>

    <!-- 选中选项的字体高亮色 -->
    <color name="mlp_item_selected_text">#FF004DA0</color>
    <!-- 未选中选项的字体高亮色 -->
    <color name="mlp_item_unselected_text">#999999</color>

    <!-- "关闭"、"确定"的字体色和背景色 -->
    <color name="mlp_close_btn_text">#FFFFFF</color>
    <color name="mlp_close_btn_bg">#66004DA0</color>
    <color name="mlp_confirm_btn_text">#FFFFFF</color>
    <color name="mlp_confirm_btn_bg">#FF004DA0</color>
</resources>